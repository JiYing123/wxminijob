/* pages/my/info.wxss */
view  {
    color: Grey;
}
.head {
    display: flex;
    flex-direction: column;
    background: #0088fe;
    width: 100%;
    padding: 100rpx 0rpx;
    align-items: center;
    justify-content: space-between;
}

.head image {
    width: 150rpx;
    height: 150rpx;
    margin: 0 auto;
    border-radius: 50%;
}

.form .weui-cells {
    z-index: 0;
}

.form .weui-input {
    overflow: hidden;
}

.weui-btn {
    background: #0088fe!important;
    color: #fff!important;
}

.disabled {
    background: #efefef;
}

.user_bottom1 {
    overflow: hidden;
    background: #fff;
    width: 90%; 
    margin: 0 0 30rpx 0;
    padding: 3% 2%; 
}

.user_bottom_list1 {
    background: #fff;
    overflow: hidden;
    height: 160rpx;
    border-bottom: 1px solid #ddd;
    padding: 20rpx 0;
}

.user_bottom_list_icon1 {
    float: left;
    width: 45%;
    padding-left: 2%;
    color: #333;
}

.user_bottom_list_icon1 text {
    display: block;
    font-size: 24rpx;
    color: #999;
}

.card {
    width: 160rpx;
    height: 160rpx;
}

.card_sc {
    padding: 0;
    margin: 0;
    background: none;
    border: 0;
    border-radius: 0;
    float: left;
    width: 160rpx;
}

.card_sc:after {
    border: 0;
    border-radius: 0;
}

.card_sc image {
    float: right;
}

.user_bottom_list1:last-child {
    border-bottom: 0;
}

.user_bottom_list:last-child {
    border-bottom: 0;
}

.cards {
    float: left;
    width: 160rpx;
    height: 160rpx;
    margin-right: 10px;
    position: relative;
}

.card1 {
    width: 160rpx;
    height: 160rpx;
}

.cards text {
    width: 40rpx;
    height: 40rpx;
    background: #f00;
    color: #fff;
    border-radius: 20px;
    text-align: center;
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    line-height: 40rpx;
}

.renzheng_bot {
    overflow: hidden;
    width: 94%;
    margin: 20rpx 20rpx 30rpx 20rpx ;
}

.renzheng_tit {
    height: 40rpx;
    line-height: 40rpx;
    position: relative;
    font-size: 36rpx;
    margin-bottom: 10rpx;
    color: #999;
}

.renzheng_tit image {
    width: 40rpx;
    height: 40rpx;
}

.renzheng_tit text {
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    left: 50rpx;
    top: 0;
    display: inline;
}

.renzheng_cont_list {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #999;
}

.tj_btn {
    height: 100rpx;
    line-height: 100rpx;
    width: 90%;
    margin: 20rpx auto;
    border-radius: 100rpx;
    color: #fff;
}

.tj_btn:after {
    border: 0;
}